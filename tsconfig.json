{
  "compilerOptions": {
    // 编译目标和模块系统
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable", "WebWorker"],
    "module": "commonjs",
    "moduleResolution": "node",
    
    // 输出配置
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    // "declarationMap": true,
    "removeComments": false,
    "importHelpers": true,
    
    // 严格类型检查
    "strict": false,  // 暂时关闭严格模式
    "noImplicitAny": false,  // 暂时关闭no-implicit-any
    "strictNullChecks": false,  // 暂时关闭严格null检查
    "strictFunctionTypes": false,  // 暂时关闭严格函数类型
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,  // 暂时关闭严格属性初始化
    "noImplicitThis": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,  // 暂时关闭索引访问检查
    "exactOptionalPropertyTypes": false,  // 暂时关闭精确可选属性类型
    "noImplicitOverride": false,  // 暂时关闭隐式重写检查
    "noPropertyAccessFromIndexSignature": false,  // 暂时关闭索引签名属性访问检查
    "alwaysStrict": false,
    
    // 代码质量检查
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowUnreachableCode": true,  // 允许无法到达的代码
    "allowUnusedLabels": true,     // 允许未使用的标签
    "suppressImplicitAnyIndexErrors": true,  // 抑制隐式any索引错误
    
    // 模块解析
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,  // 暂时关闭隔离模块检查
    
    // 性能优化
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "./out/.tsbuildinfo",
    
    // 路径映射 - 与webpack alias一致
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@drivers/*": ["src/drivers/*"],
      "@models/*": ["src/models/*"],
      "@utils/*": ["src/utils/*"],
      "@components/*": ["src/webview/components/*"],
      "@stores/*": ["src/webview/stores/*"]
    },
    
    // 实验性功能
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    // JSX支持（为Vue SFC准备）
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment"
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "out",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/test/**/*",
    "**/tests/**/*",
    "utest/**/*",
    "utest",
    "coverage",
    ".vscode-test"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}